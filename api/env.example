# Configuración del Bot de Telegram
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_USER_ADMIN=admin_user_id_here
TELEGRAM_USER_CHECKER=checker_user_id_here

# Configuración del Servidor
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Configuración de Autenticación
TOKEN_EXPIRY=1h  # Duración del token JWT (ej: 1h, 2h, 3600s)
TEMP_LINK_EXPIRY=300

# Configuración de Base de Datos
DATABASE_PATH=./database/static-cms.sqlite
SQLITE_MODE=normal
DATABASE_TIMEOUT=5000

# Configuración de Breakpoints
BREAK_POINTS=320,768,1024,1440
IMAGE_QUALITY=85
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later

# Configuración de Archivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,audio/mpeg,video/mp4
PUBLIC_DIR=../public
TEMPLATE_DIR=../template

# Configuración de Cache
ENABLE_CACHE=true
CACHE_TTL=3600
CACHE_DIR=./cache

# Configuración de Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.js
LOG_TIMESTAMP_FORMAT=YYYY-MM-DD HH:mm:ss 

# Entorno de ejecución
ENTORNO=DEV  # DEV para desarrollo, PRD para producción 

# Actualización automática del código al iniciar
ACTUALIZACION_AUTOMATICA=true

# Configuración del dominio del panel de administración
DOMINIO_ADMIN=http://localhost:3000 