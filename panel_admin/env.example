# Configuración del Panel de Administración - Static CMS

# URL del API Backend
VITE_API_URL=http://localhost:3000/api

# Título de la aplicación
VITE_APP_TITLE=Static CMS Admin

# Configuración de desarrollo
VITE_DEV_MODE=true
VITE_DEBUG=false

# Configuración de analytics (opcional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Configuración de features
VITE_ENABLE_PWA=false
VITE_ENABLE_DARK_MODE=true

# Configuración de cache
VITE_CACHE_DURATION=300000
VITE_QUERY_STALE_TIME=300000

# Configuración de uploads
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf,text/plain

# Configuración de seguridad
VITE_SESSION_TIMEOUT=3600000
VITE_REFRESH_TOKEN_INTERVAL=300000

# Configuración del dominio del panel de administración (sincronizada desde el backend)
DOMINIO_ADMIN=http://localhost:3000

# URL base para las imágenes del sitio público
VITE_BASE_URL=http://localhost:3000 